<h1>Create a da pizza pAi!!</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li> ERROR
        <%= error %>
      </li>
      <% end %>
  </ul>
<% end %>

<%= form_for @pizza do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  <%= f.submit %>

<% end %>
