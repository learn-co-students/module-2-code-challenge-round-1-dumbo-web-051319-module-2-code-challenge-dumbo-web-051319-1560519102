
<% if flash[:errors] %>
  <p>Errors</p>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
  <br>
<% end %>

<%= form_for @pizza do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :ingredients %>
<%= f.text_field :ingredients %>
<%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
<%= f.submit %>
<% end %>
