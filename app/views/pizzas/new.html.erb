<% if flash[:errors] %>
<ul>
  <% flash[:errors].each do |error| %>
  <li>
    <%= error %>
  </li>
  <% end %>
</ul>
<% end %>


<h3>Add Pizza</h3>
<%= form_for @pizza do |f| %>
<p>Name: <%= f.text_field :name %></p>
<p>Ingredients: <%= f.text_field :ingredients %></p>
<p>Restaurant: <%= f.collection_select :restaurant_id, @restaurants, :id, :name %></p>
<p><%= f.submit %>
<% end %>
