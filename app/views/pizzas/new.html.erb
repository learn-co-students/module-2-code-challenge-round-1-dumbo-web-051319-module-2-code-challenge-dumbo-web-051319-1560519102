<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <h1 style="color:red;"><%= error %> <br></h1> 
  <% end %>
<% end  %>

<%= form_for @pizza do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>

  <%= f.label :restaurant_id %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  
  <%= f.submit %>

<% end  %>